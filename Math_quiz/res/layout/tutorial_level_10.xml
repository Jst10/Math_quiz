		         	android:layout_below="@+id/TL10apple0"
		         	android:src="@drawable/apple"  
		         	android:visibility="invisible"/>
           	 	
	       
	        <View
	           android:id="@+id/TLMseperator1"
	           android:layout_below="@+id/TL10apple11"
	           android:layout_height="200dp"
		       android:layout_width="10dp"
		           >
	       	</View>
	   
	       </RelativeLayout>
          	<LinearLayout 
