	       	    android:layout_height="wrap_content"
	       	    android:orientation="horizontal"
	       	    android:weightSum="4"
	       	    android:paddingBottom="13dp">
	       	    <TextView 
	       	        android:id="@+id/TL10Tmpt0"
	       	        android:layout_width="0px"
	       	        android:layout_height="wrap_content"
	       	        android:text="1"
	       	        android:layout_weight="1"
	       	        android:textAlignment="center"
	       	        android:gravity="center_horizontal"
	       	        android:visibility="invisible"
	       	        />
	       	     <TextView 
	       	        android:id="@+id/TL10Tmpt1"
	       	        android:layout_width="0px"
	       	        android:layout_height="wrap_content"
	       	        android:text="1"
	       	        android:layout_weight="1"
	       	        android:textAlignment="center"
	       	        android:gravity="center_horizontal"
	       	        android:visibility="invisible"
	       	        />
	       	      <TextView 
	       	        android:id="@+id/TL10Tmpt2"
	       	        android:layout_width="0px"
	       	        android:layout_height="wrap_content"
	       	        android:text="1"
	       	        android:layout_weight="1"
	       	        android:textAlignment="center"
	       	        android:gravity="center_horizontal"
	       	        android:visibility="invisible"
	       	        />
	       	       <TextView 
	       	        android:id="@+id/TL10Tmpt3"
	       	        android:layout_width="0px"
	       	        android:layout_height="wrap_content"
	       	        android:text="1"
	       	        android:layout_weight="1"
	       	        android:textAlignment="center"
	       	        android:gravity="center_horizontal"
	       	        android:visibility="invisible"
	       	        />
	       	       
	       	</LinearLayout>
           <TextView
		        android:id="@+id/TL10text2"
		        android:layout_below="@+id/TL10numberContainer"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:textSize="30sp"
		        android:text="12 / 4 = 3"
		        android:layout_centerHorizontal="true"
		        android:visibility="invisible"
	        />
      </RelativeLayout>
     
    
   <Button 
       android:id="@+id/TL10doneButton"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:text="@string/ok"
       android:background="@drawable/button_background_normal"
       android:layout_alignParentBottom="true"
       /> 
</RelativeLayout>
