<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="98"
    tools:context=".LaunchActivity" >

    <include layout="@layout/p_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/TBtitleBar"
        android:orientation="vertical"
        android:weightSum="85" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="8" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="23" >

            <Button
                android:id="@+id/MPJoin"
                style="@style/MyMenuButtonsStyle"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_button_background"
                android:onClick="MultiPlayerActivityButtonClick"
                android:text="@string/join_game" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="23" >

            <Button
                android:id="@+id/MPhost"
                style="@style/MyMenuButtonsStyle"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_button_background"
                android:onClick="MultiPlayerActivityButtonClick"
                android:text="@string/host_game" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_gravity="center"
            android:layout_weight="23" >

            <Button
                android:id="@+id/MPOneDevice"
                style="@style/MyMenuButtonsStyle"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/round_button_background"
                android:onClick="MultiPlayerActivityButtonClick"
                android:text="@string/one_device" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="8" />
    </LinearLayout>

</RelativeLayout>