<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
     <include layout="@layout/p_title_bar"/>
	
    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_centerVertical="true"
         android:orientation="vertical"
        android:layout_centerHorizontal="true"
         >
     <RelativeLayout 
	        
	        android:layout_height="wrap_content"
         	android:layout_width="wrap_content"
         	 android:layout_centerHorizontal="true"
       >
		    <RelativeLayout
		        android:id="@+id/TL0layout0"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        >
		        <ImageView
		            android:id="@+id/TL0apple0"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple"  
		         	android:visibility="invisible"
		        
		        />
		        
		        <ImageView
		            android:id="@+id/TL0apple1"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple" 
		         	android:layout_below="@id/TL0apple0"  
		         	android:visibility="invisible"
		        
		        
		        />
		        <ImageView
		            android:id="@+id/TL0apple2"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple"   
		        	android:layout_toRightOf="@id/TL0apple1"
		        	android:layout_centerVertical="true"
		        	android:visibility="invisible"
		        
		        />
		    </RelativeLayout>
		    <TextView
		        android:id="@+id/TL0upSumChar"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/TL0layout0"
		        android:textSize="30sp"
		        android:text="+"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:visibility="invisible"
		        />
		    
		    <RelativeLayout 
		        android:id="@+id/TL0layout1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@+id/TL0upSumChar"
		     >
		        
		        
		        <ImageView
		            android:id="@+id/TL0apple3"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple"  
		         	android:visibility="invisible"
		        
		        />
		        
		        <ImageView
		            android:id="@+id/TL0apple4"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple" 
		         	android:layout_below="@id/TL0apple3"  
		       		android:visibility="invisible"
		        
		        />
		        
		        
		        
		        
		        
		        
		     </RelativeLayout>
		      <TextView
		        android:id="@+id/TL0upEaqChar"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/TL0layout1"
		        android:textSize="30sp"
		        android:text="="
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:visibility="invisible"
		        
		         />
		    <RelativeLayout 
		        android:id="@+id/TL0layout2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@+id/TL0upEaqChar"
		        >
        	   <ImageView
		            android:id="@+id/TL0apple6"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple"  
		        	android:visibility="invisible"
		        />
		        
		        <ImageView
		            android:id="@+id/TL0apple7"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple" 
		         	android:layout_below="@id/TL0apple6"  
		        	android:visibility="invisible"
		        
		        />
		         <ImageView
		            android:id="@+id/TL0apple8"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple"  
		        	android:layout_toRightOf="@id/TL0apple7"
		        	android:visibility="invisible"
		        />
		        
		        <ImageView
		            android:id="@+id/TL0apple9"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple" 
		         	android:layout_below="@id/TL0apple8"  
		            android:layout_toRightOf="@id/TL0apple7"
		            android:visibility="invisible"
		        
		        />
		          <ImageView
		            android:id="@+id/TL0apple10"
		         	android:layout_width="35dp"
		         	android:layout_height="35dp"
		         	android:src="@drawable/apple"   
		        	android:layout_toRightOf="@id/TL0apple8"
		        	android:layout_centerVertical="true"
		        	android:visibility="invisible"
		        
		        />
		        
	    </RelativeLayout>
	</RelativeLayout>
	<View 
	    android:layout_height="20dp"
	    android:layout_width="2dp"
	    android:background="@android:color/transparent"
	    
	    />
   <RelativeLayout 
	       android:layout_height="wrap_content"
         	android:layout_width="wrap_content"
         	 android:layout_centerHorizontal="true"
       >
		     <TextView
		        android:id="@+id/TL0text1"
		        android:layout_height="wrap_content"
		        android:layout_width="70dp"
		        android:gravity="center_horizontal"
		        android:layout_centerVertical="true"
   				android:textSize="30sp"
		        android:text="1"
		        android:layout_alignParentLeft="true"
		        android:visibility="invisible"
		        />
		   
		    <TextView
		        android:id="@+id/TL0text2"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/TL0text1"
		        android:textSize="30sp"
		        android:text="+"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:visibility="invisible"
		        />
		      <TextView
		        android:id="@+id/TL0text3"
		        android:layout_height="wrap_content"
		        android:layout_width="35dp"
		        android:gravity="center_horizontal"
		        android:layout_toRightOf="@+id/TL0text2"
		        android:layout_centerVertical="true"
   				android:textSize="30sp"
		        android:text="1"
		        android:visibility="invisible"
		        />
		      
		      <TextView
		        android:id="@+id/TL0text4"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/TL0text3"
		        android:textSize="30sp"
		        android:text="="
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:visibility="invisible"
		     
		        
		         />
		       <TextView
		        android:id="@+id/TL0text5"
		        android:layout_height="wrap_content"
		        android:layout_width="105dp"
		        android:gravity="center_horizontal"
		        android:layout_centerVertical="true"
		        android:layout_toRightOf="@+id/TL0text4"
		        android:textSize="30sp"
		        android:text="1"
		        android:visibility="invisible"
		         />
			
			</RelativeLayout>
    </LinearLayout>
   <Button 
       android:id="@+id/TL0doneButton"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:text="@string/ok"
       android:background="@drawable/button_background_normal"
       android:layout_alignParentBottom="true"
       /> 
</RelativeLayout>
