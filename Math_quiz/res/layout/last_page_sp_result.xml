<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 	
 	<TextView
            android:id="@+id/LPtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="30sp" 
            android:text="Trenutni:"/>
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" 
        android:layout_below="@+id/LPtitle1"
     	android:layout_marginLeft="30dp"
     	android:layout_marginTop="10dp"
        >
		
        <TextView
            android:id="@+id/LPtasks1"
            android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
            android:layout_height="30sp"
            android:textSize="20sp"
            android:layout_width="105sp"
            
            android:text="St. naloge:" />
 		 <TextView
            android:id="@+id/LPtasks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/LPtasks1"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:text="20" />
 		 
        <TextView
            android:id="@+id/LPscore1"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/LPtasks1"
            android:layout_height="30sp"
            android:textSize="20sp"
            android:layout_width="105sp"
            android:text="Točke:" />
         <TextView
            android:id="@+id/LPscore2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/LPscore1"
            android:layout_below="@+id/LPtasks1"
            android:textSize="20sp"
            android:text="12" />

        <TextView
            android:id="@+id/LPtime1"
            android:layout_alignParentLeft="true"
           	android:layout_below="@+id/LPscore1"
           	android:layout_height="30sp"
            android:textSize="20sp"
            android:layout_width="105sp"
            android:text="Čas:" />
       
        <TextView
            android:id="@+id/LPtime2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_below="@+id/LPscore1"
            android:layout_toRightOf="@+id/LPtime1"
            android:textSize="20sp"
            android:text="30" />

    </RelativeLayout>
     <View
         android:id="@+id/middleSepartator"
         android:layout_height="1px"
         android:layout_width="match_parent"
         android:layout_centerVertical="true"
         android:layout_alignParentLeft="true"
         />
<!--          android:layout_marginTop="-20dp" -->


	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/relativeLayout1"
	    android:layout_marginTop="123dp"
	    android:textAlignment="center" >

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="50dp"
	            android:gravity="center_horizontal"
	            android:text="nalog" />

	        <TextView
	            android:layout_width="50dp"
	            android:gravity="center_horizontal"
	            android:text="čas" />

	        <TextView
	            android:layout_width="50dp"
	            android:gravity="center_horizontal"
	            android:text="točke" />
	    </TableRow>

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="10" />

	        <TextView
	            android:id="@+id/ESPtimeL"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="5.4" />

	        <TextView
	            android:id="@+id/ESPscoreL"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="10" />
	    </TableRow>

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="20" />

	        <TextView
	            android:id="@+id/ESPtimeM"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="8.2" />

	        <TextView
	            android:id="@+id/ESPscoreM"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="17" />
	    </TableRow>

	    <TableRow
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <TextView
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="30" />

	        <TextView
	            android:id="@+id/ESPtimeH"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="18.2" />

	        <TextView
	            android:id="@+id/ESPscoreH"
	            android:layout_width="0px"
	            android:gravity="center_horizontal"
	            android:text="28" />
	    </TableRow>
	</TableLayout>

	<TextView
	    android:id="@+id/LPtitle2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/relativeLayout1"
	    android:layout_marginTop="74dp"
	    android:text="Do sedaj:"
	    android:textSize="30sp" />
	
	
		<LinearLayout
		    android:layout_height="50dp"
		    android:layout_width="match_parent"
		    android:weightSum="3"
		    android:orientation="horizontal"
		    android:layout_alignParentBottom="true"
	    >
        <Button 
            android:id="@+id/LPbuttonAgain"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Ponovno"
            android:gravity="center"
            />
       <Button 
            android:id="@+id/LPbuttonShare"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Deli"
             android:gravity="center"
            />
        <Button 
            android:id="@+id/LPbuttonFinish"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Končaj"
             android:gravity="center"
            />
     </LinearLayout>
	

</RelativeLayout>