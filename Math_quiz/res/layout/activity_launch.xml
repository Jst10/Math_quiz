<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="98"
    tools:context=".LaunchActivity" >
	<RelativeLayout 
	    android:id="@+id/ALtitleBar"
	    android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
        	android:text="Math quiz :)"
        	android:textSize="20sp"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	android:paddingLeft="20dp"
        />
        <ImageButton 
            android:id="@+id/ALsettingsButton"
            android:layout_height="50dp"
        	android:layout_width="50dp"
        	android:padding="10dp"
        	android:scaleType="fitXY"
			android:src="@drawable/action_settings"
			android:background="@android:color/transparent"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
            />
	</RelativeLayout>
    <LinearLayout 
         android:layout_height="fill_parent"
	     android:orientation="vertical"
	     android:layout_width="match_parent"
	     android:layout_below="@+id/ALtitleBar"
	     android:weightSum="85"
    >
	    <View 
	        android:layout_height="0px"
	        android:layout_width="match_parent"
	        android:layout_weight="8"
	        />
	    <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="23"
	        android:layout_gravity="center"
	     >
	     <Button
	        android:id="@+id/ALsinglePLayer"
	        android:onClick="launcherActivityButtonClick"
	        android:layout_width="200dp"
	        android:layout_height="60dp"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/button_background_normal"
	        android:text="Single player" />
	        
	    </RelativeLayout>
	       <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="23"
	        android:layout_gravity="center"
	     >
	     <Button
	        android:id="@+id/ALmultiPLayer"
	        android:onClick="launcherActivityButtonClick"
	        android:layout_width="200dp"
	        android:layout_height="60dp"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
            android:background="@drawable/button_background_normal"
	        android:text="Multi player" />
	        
	    </RelativeLayout>
	     
	       <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0px"
	        android:layout_weight="23"
	        android:layout_gravity="center"
	     >
	     <Button
	        android:id="@+id/ALtutorial"
	        android:onClick="launcherActivityButtonClick"
	        android:layout_width="200dp"
	        android:layout_height="60dp"
	        android:layout_centerVertical="true"
	        android:layout_centerHorizontal="true"
	        android:background="@drawable/button_background_normal"
	        android:text="Tutorial" />
	    </RelativeLayout>
	    <View 
	        android:layout_height="0px"
	        android:layout_width="match_parent"
	        android:layout_weight="8"
	        />
	  
	</LinearLayout>
</RelativeLayout>
