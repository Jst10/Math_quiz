<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="98"
    tools:context=".LaunchActivity" >
<!--     <include layout="@layout/p_title_bar"/> -->
	
  
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TBtitleBar"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
     >
    
         <TextView 
            android:id="@+id/MPWJTextIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IP naslov strežnika:"
            android:textSize="18sp"
           
            />
       <EditText 
            android:id="@+id/MPWJWEditIp"
            android:layout_below="@+id/MPWJTextIp"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:text="192.168.1.10"
            android:layout_marginTop="10dp"
           />
         <TextView 
            android:id="@+id/MPWJTextPort"
            android:layout_below="@+id/MPWJWEditIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Številka vrat (PORT):"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            
            />
       <EditText 
            android:id="@+id/MPWJWEditPort"
            android:layout_below="@+id/MPWJTextPort"
            android:layout_width="80sp"
	        android:inputType="number"
            android:layout_height="wrap_content"
            android:text="1024"
            android:layout_marginTop="10dp"
           />
       
	  </RelativeLayout>
	
      
	  

	    <LinearLayout android:layout_height="50dp"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	   		 android:layout_alignParentBottom="true"
	        android:weightSum="4"
	        >
	       <View android:layout_height="match_parent"
	           android:layout_width="0px" 
	           android:layout_weight="1"/>
	       
	        <Button
		        android:id="@+id/MPWJConnect"
		        android:layout_width="0px"
		        android:layout_height="match_parent"
		         android:layout_weight="2"
		        android:background="@drawable/button_background_normal"
		        android:text="Poveži" />
	       
	        <View android:layout_height="match_parent"
	           android:layout_width="0px" 
	           android:layout_weight="1"/>
	    </LinearLayout>

</RelativeLayout>
